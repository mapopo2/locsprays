         <!-- icons -->
        <script src="https://kit.fontawesome.com/64e8faaeab.js" crossorigin="anonymous"></script>

    </head>

    <body>
        <h1> Loc Spray Recipes </h1>

        <form action="/contents" method="POST" class="buttons">
            <button type="submit" value="rosewater" name="choice">
              <p class="caption">Rosewater</p>üåπ
            </button>
            <button type="submit" value="aloe" name="choice">
              <p class="caption">Aloe Vera</p>üçÉ
            </button>
            <button type="submit" value="herbs" name="choice">
              <p class="caption">Herbs</p>üåø
            </button>
          </form>

        <div id = "home_content">
            <% if(locals.ingredients){ %>
              
                  <%= ingredients.name %>
                </h2> 
          
               <h3>Contents:</h3>
              <ul id = "ingredientsList">
          
            
                <% ingredients.contents.liquid.forEach(liquids => { %>
                <li> 
                    <%= liquids.quantity %> of <%= liquids.name %>
                  </li>
                  <% }) %>
                <li> 
                  <%= ingredients.contents.oils.quantity %> of
                  <%= ingredients.contents.oils.name %> 
                  
                  </li>

                  <li class="options"> 
                    Some optional oils are <%= ingredients.contents.optional.name %> 
                    </li>
                
              </ul>
              
              <% } else { %>
              <div id = "homeTitle">
              <h2 class = "pick" >Pick your favourite loc spray ingredient üëÜ</h2>  
              </div>
              <% }; %>
              
             
        </div>
         <div id="footer"> 
          <% if (locals.currentYear) { %>
          <p> ¬© Mapopo2 <%= currentYear %>
            <a href="https://github.com/mapopo2"><i class="fa-brands fa-github fa-xl fa-bounce github"></i></a></p>
          <%} %>
        </div>



        <!-- <script src="" async defer></script> -->
    </body>
</html>